<Window x:Class="ImageMetadataRemover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMetadataRemover"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DockPanel>
                <TextBlock Text="Image File to strip" />
                <TextBox Text="{Binding SelectedPath}" />
            </DockPanel>

            <Button Command="{Binding Strip}">Strip Metadata</Button>
        </StackPanel>
    </Grid>
</Window>
